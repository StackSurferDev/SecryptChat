<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecryptChat"
        tools:targetApi="31">

        <!-- HomeActivity: Set as the launcher activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity: Placeholder for the login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- SignupActivity: Placeholder for the sign-up screen -->
        <activity
            android:name=".SignupActivity"
            android:exported="true" />

        <!-- MainActivity: No longer the launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>
